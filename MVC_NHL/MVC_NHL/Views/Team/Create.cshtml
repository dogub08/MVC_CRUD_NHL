
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="content" style="background-image: url('/images/nhlteams.jpg');">
    <div class="container mt-2">
        <div class="row">
            <div class="col-sm-6">
                @Html.Partial("/Views/Shared/Partial/_FormMessages.cshtml")

                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Create Team</h3>
                    </div>

                    @using (Html.BeginForm("Create", "Team", FormMethod.Post))
                    {
                    @Html.Partial("~/Views/Team/Partial/_TeamForm.cshtml")
                    }
                </div>
            </div>
        </div>
    </div>
</div>


