@model MVC_NHL.Models.DataTransferObjects.UpdateTeamDTO
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
<div class="content" style="background-image: url('/images/nhlteams.jpg');">
    <div class="container mt-2">
        <div class="row">
            <div class="col-sm-6">
                @Html.Partial("/Views/Shared/Partial/_FormMessages.cshtml")
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Update Team</h3>
                    </div>
                    <form action="/Team/Update" method="post" role="form">
                        <input type="text" style="visibility:hidden" name="Id" value="@Model.Id" />
                        <div class="card-body img-fluid">
                            <img class="card-img-top" src="~/images/snapshot.jpg" alt="Card image" style="height:390px ">
                            <div class="form-group">
                                <label for="Name">Team Name</label>
                                <input type="text" class="form-control" name="TeamName" value="@Model.TeamName" placeholder="Team Name">
                            </div>
                            <div class="form-group">
                                <label for="Description">Description</label>
                                <input type="text" class="form-control" name="Description" value="@Model.Description" placeholder="Description">
                            </div>
                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary float-right">Submit</button>
                            <a href="/Team/List" class="btn btn-dark float-left">Back To List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>




